<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/close"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#6aff22"
        android:textColor="@color/accent_material_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/pause"
        android:layout_above="@+id/close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:background="#ff0700"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:clickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heirDryer"
        android:background="@drawable/suszarka"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vaccumCleaner"
        android:layout_alignBottom="@+id/heirDryer"
        android:layout_alignLeft="@+id/pause"
        android:layout_alignStart="@+id/pause"
        android:background="@drawable/odkurzacz" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rain"
        android:background="@drawable/deszcz"
        android:layout_alignTop="@+id/vaccumCleaner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ocean"
        android:layout_marginTop="61dp"
        android:background="@drawable/fale"
        android:layout_below="@+id/heirDryer"
        android:layout_alignRight="@+id/heirDryer"
        android:layout_alignEnd="@+id/heirDryer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart"
        android:layout_alignBottom="@+id/ocean"
        android:layout_alignLeft="@+id/pause"
        android:layout_alignStart="@+id/pause"
        android:background="@drawable/serce" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bird"
        android:layout_alignBottom="@+id/heart"
        android:layout_alignLeft="@+id/rain"
        android:layout_alignStart="@+id/rain"
        android:background="@drawable/ptak" />


</RelativeLayout>

